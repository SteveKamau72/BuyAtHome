<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.softtech.stevekamau.buyathome">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activites.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activites.Laptops"
            android:label="@string/title_activity_laptops">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.Details"
            android:label="@string/title_activity_details"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activites.MyCart"
            android:label="@string/title_activity_my_cart" />
        <activity
            android:name=".activites.MyFavourites"
            android:label="@string/title_activity_my_favourites" />
        <activity
            android:name=".activites.LoginActivity"
            android:label="@string/title_activity_login"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activites.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".activites.SearchActivity"
            android:label="@string/title_activity_search" />
        <activity
            android:name=".activites.Phones"
            android:label="@string/title_activity_phones">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.PhoneAccessories"
            android:label="@string/title_activity_phone_accessories">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.LaptopAccessories"
            android:label="@string/title_activity_laptop_accessories">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.Checkout"
            android:label="@string/title_activity_checkout">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MyCart" />
        </activity>
        <activity
            android:name=".activites.PaymentAndShipping"
            android:label="@string/title_activity_payment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.Checkout" />
        </activity>
        <activity
            android:name=".Verification"
            android:label="@string/title_activity_verification">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.PaymentAndShipping" />
        </activity>
        <activity
            android:name=".activites.MostRated"
            android:label="@string/title_activity_most_rated">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.LatestLaptops"
            android:label="@string/title_activity_latest_laptops">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".activites.LatestPhones"
            android:label="@string/title_activity_latest_phones">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activites.MainActivity" />
        </activity>
        <activity
            android:name=".Preferences"
            android:label="@string/title_activity_preferences" />
        <activity
            android:name=".activites.FeedActivity"
            android:label="@string/title_activity_feed" />
        <activity
            android:name=".activites.ZoomImage"
            android:label="@string/title_activity_zoom_image" />
        <activity
            android:name=".NameMail"
            android:label="@string/title_activity_name_mail" />
        <activity
            android:name=".activites.FirstNameMail"
            android:label="@string/title_activity_name_mail" />
        <activity
            android:name=".activites.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activites.Register"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Test"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:replace="android:theme" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".activites.MoreProducts" />
        <activity android:name=".activites.AdminPanel" />
        <activity
            android:name=".activites.Cart"
            android:label="@string/title_activity_cart"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activites.AddNewProduct"
            android:label="@string/title_activity_add_new_product"
            android:theme="@style/AppTheme" />
        <activity android:name=".activites.WishList" />
        <activity android:name=".activites.VerifyInfo" />
        <activity
            android:name=".activites.FeaturedDetails"
            android:label="@string/title_activity_featured_details"
            android:theme="@style/AppTheme" />
        <activity android:name=".activites.ThankYou"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:background="@drawable/bg_border_rectangle_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_slno"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="title"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_slno"
        android:layout_alignLeft="@+id/tv_slno"
        android:layout_alignRight="@+id/tv_slno"
        android:layout_alignStart="@+id/tv_slno"
        android:layout_below="@+id/tv_slno"
        android:singleLine="true"
        android:text="description"
        android:textColor="#000" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_phone"
        android:layout_alignStart="@+id/tv_phone"
        android:layout_below="@+id/tv_phone"
        android:layout_gravity="right"
        android:paddingBottom="5dp"
        android:text="cash"
        android:textColor="#b71c1c" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/linear_layout_clicked"
        android:padding="3dp"
        android:src="@drawable/below" />

</RelativeLayout>
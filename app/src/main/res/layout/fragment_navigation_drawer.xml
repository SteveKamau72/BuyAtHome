<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foobar="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/header_bg"
            android:scaleType="centerCrop"></ImageView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_person_2" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/textView10"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/imageView2"
            android:ellipsize="end"
            android:shadowColor="#000"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="cdjhcvdc"
            android:textColor="#fff"
            android:textSize="25dp"
            foobar:typeface="Gudea-Regular.ttf" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/textView11"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:shadowColor="#000"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="steve@g.com"
            android:textColor="#fff"
            android:textSize="14dp"
            foobar:typeface="Gudea-Regular.ttf" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:shadowColor="#ccc"
            android:shadowRadius="1"
            android:text="Hi,"
            android:textColor="#fff"
            android:textSize="22dp"
            foobar:typeface="Gudea-Regular.ttf" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/linear_layout_clicked"
                android:clickable="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/cart" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="My Cart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="bold"
                    foobar:typeface="Gudea-Bold.ttf" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_toRightOf="@+id/textView6"
                    android:background="@drawable/green_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wishlist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/linear_layout_clicked"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/favourite" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/img"
                    android:text="WishList"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="bold"
                    foobar:typeface="Gudea-Bold.ttf" />

                <TextView
                    android:id="@+id/num2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignBaseline="@+id/txt"
                    android:layout_alignBottom="@+id/txt"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_toRightOf="@+id/txt"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/wishlist"
                android:background="#CCC" />

            <com.ctrlplusz.anytextview.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:text="Categories"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold"
                foobar:typeface="Gudea-Bold.ttf" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/drawerList"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/drawerList"
                android:background="@drawable/linear_layout_clicked"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/favourite" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Admin"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="bold"
                    foobar:typeface="Gudea-Bold.ttf" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:foobar="http://schemas.android.com/apk/res-auto"
    android:layout_width="118dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_row_selector"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_placeholder" />

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/red_circle">

                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/red_circle">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/percentTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="2dp"
                                android:text="50%"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/percentTxt"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_horizontal"
                                android:text="OFF"
                                android:textColor="@color/white"
                                android:textSize="8dp" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/options"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/options" />


                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="2"
                    android:paddingLeft="5dp"
                    android:text="Samsungf usb cablexvndvnsddvjdbv"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    foobar:typeface="Gudea-Regular.ttf" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/ksh1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Ksh. "
                    android:textColor="@color/amount_text_color"
                    android:textSize="12dp"
                    foobar:typeface="Gudea-Bold.ttf" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/amount1"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_toRightOf="@+id/ksh1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:singleLine="true"
                    android:text="10000000000"
                    android:textColor="@color/amount_text_color"
                    android:textSize="15dp"
                    foobar:typeface="Gudea-Bold.ttf" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/ksh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount1"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="Ksh. "
                    android:textColor="@color/green_color"
                    android:textSize="12dp"
                    foobar:typeface="Gudea-Bold.ttf" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/amount"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount1"
                    android:layout_toRightOf="@+id/ksh"
                    android:ellipsize="end"
                    android:ems="10"
                    android:singleLine="true"
                    android:text="10000000000"
                    android:textColor="@color/green_color"
                    android:textSize="15dp"
                    foobar:typeface="Gudea-Bold.ttf" />

                <View
                    android:layout_width="110dp"
                    android:layout_height="5dp"
                    android:layout_below="@+id/amount" />

                <TextView
                    android:id="@+id/img1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/img2"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/img3"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/img4"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/p_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>